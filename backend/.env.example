# Production environment variables for Railway deployment

# Server Configuration
PORT=5001
NODE_ENV=production

# MongoDB Connection (Get from MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dineflow?retryWrites=true&w=majority

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Default Admin User (for initial setup)
DEFAULT_ADMIN_EMAIL=admin@dineflow.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=Admin User

# Twilio (Optional - for SMS notifications)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890
# TWILIO_WHATSAPP_NUMBER=+1234567890

# CORS (Your Vercel frontend URL)
FRONTEND_URL=https://your-app.vercel.app
